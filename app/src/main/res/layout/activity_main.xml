<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.crud.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nrp"
        android:id="@+id/textView"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="RelativeOverlap" />

    <EditText
        android:id="@+id/nrp"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:autofillHints="Masukkan NRP"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nama"
        android:id="@+id/textView2"
        android:paddingTop="5dp"
        android:layout_below="@+id/nrp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/nama"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nrp"
        android:layout_alignBottom="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName"
        android:autofillHints="Masukkan Nama"
        tools:ignore="LabelFor" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/simpan"
        android:id="@+id/Simpan"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/ambildata"
        android:id="@+id/ambildata"
        android:layout_alignTop="@+id/Simpan"
        android:layout_toEndOf="@+id/Simpan"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/update"
        android:id="@+id/Update"
        android:layout_below="@+id/Simpan"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/hapus"
        android:id="@+id/Hapus"
        android:layout_alignTop="@+id/Update"
        android:layout_toEndOf="@+id/Update"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"/>


</RelativeLayout>